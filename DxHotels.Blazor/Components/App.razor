
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DXHotels Demo | ASP.NET Controls by DevExpress</title>
    <base href="/" />

    @*
    <link href="css/site.css" rel="stylesheet" />
*@
    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <link href="_content/DevExpress.Blazor.Themes/bootstrap-external.bs5.css" rel="stylesheet" asp-append-version="true" />
    <link href="_content/BlazorCaptcha/captcha.css" rel="stylesheet" />
    <link href="Content/Styles.css" rel="stylesheet" />
    <script src="Content/jquery.min.js" type="text/javascript"></script>
    <script src="Content/Scripts.js" type="text/javascript"></script>
    
    <link href="DxHotels.Blazor.styles.css" rel="stylesheet" />
    <HeadOutlet @rendermode="RenderModeForPage" />/>
    @DxResourceManager.RegisterScripts()
</head>
<body data-bs-theme="orange">
    <Routes @rendermode="RenderModeForPage" />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path.StartsWithSegments("/Account")
        ? null
        : InteractiveServer;
}
